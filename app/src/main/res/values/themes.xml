<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.SplashScreen.Start" parent="Base"></style>

    <style name="Base" parent="Theme.SplashScreen.IconBackground">
        <!--启动屏背景色-->
        <item name="windowSplashScreenBackground">@android:color/holo_purple</item>
        <!--logo-->
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_android_24dp</item>
        <!--logo 动画时长（logo icon必须是支持动画的drawable）-->
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <!--增加window背景与icon颜色的对比度-->
        <item name="windowSplashScreenIconBackgroundColor">@android:color/holo_blue_light</item>
        <!--activity的Theme-->
        <item name="postSplashScreenTheme">@style/Theme.App</item>
    </style>

    <style name="Theme.App" parent="Theme.Material3.DayNight.NoActionBar">
        <!--        <item name="colorPrimaryDark">?attr/colorPrimary</item>-->
        <!-- Transparent system bars for edge-to-edge. -->
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
